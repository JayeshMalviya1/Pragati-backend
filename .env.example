# Supabase Database Configuration for PRAGATI
# Copy this file to .env and fill in your actual values

# Supabase Connection String (get from Supabase dashboard)
DATABASE_URL=postgres://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-ID].supabase.co:5432/postgres

# Application Settings
PORT=4000
NODE_ENV=production

# Supabase Database Details
DB_HOST=db.[YOUR-PROJECT-ID].supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=[YOUR-SUPABASE-PASSWORD]
DB_SSL=true

# Optional: For development
# DB_HOST=localhost
# DB_NAME=pragati_db
# DB_USER=prg_user
# DB_PASSWORD=prg_password
# DB_SSL=false